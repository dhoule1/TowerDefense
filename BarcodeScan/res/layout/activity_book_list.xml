<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/horzLayTitle"
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/haveBooksText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@+string/have_books"
	        android:textSize="20sp"
	        android:layout_weight="3"/>
	    <TextView
	        android:id="@+id/wantBooksText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@+string/want_books"
	        android:textSize="20sp"
	        android:gravity="right"
	        android:paddingRight="70dp"
	        android:layout_weight="2"/>
	</LinearLayout>
    
    <LinearLayout
        android:id="@+id/horzLayList"
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"> 

	    <ListView
	        android:id="@+id/listview1"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:layout_weight="1"/> 
	    
	    <ListView
	      android:id="@+id/listview2"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_weight="1"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/horzLayBtn"
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
	    
        <Button
            android:id="@+id/btnHave"
            android:text="@+string/new_book"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnWant"
            android:text="@+string/new_book"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout> 